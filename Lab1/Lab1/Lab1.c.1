#include <stdio.h>
#include <math.h>
int main(void)
{
	double inputNumberOne,inputNumberTwo,outputProduct,outputDifference,outputSquareRootSum;//declare the variables used in the code
	
	printf("Enter two positive numbers: ");//Outputs message on to the display to ask user for two positive numbers
	scanf("%lf %lf",&inputNumberOne, &inputNumberTwo);//get input from the user
	
	outputProduct= inputNumberOne*inputNumberTwo;//conduct product calculation
	outputDifference= inputNumberOne-inputNumberTwo;//conduct difference calculation
	outputSquareRootSum= sqrt(inputNumberOne)+sqrt(inputNumberTwo);//conduct Square root sum calculation
	
	printf("The product is: %0.2lf, the difference is: %0.2lf and the sum of roots is: %0.2lf\n",outputProduct,outputDifference,outputSquareRootSum);//output the results
	return 0;
}
